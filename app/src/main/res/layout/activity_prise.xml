<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PriseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cyan_50"
            android:elevation="@dimen/cardview_default_elevation"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView

                android:id="@+id/priseRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/pink_50"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cpuImage"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:src="@drawable/img_w_01" />

            <com.daasuu.bl.BubbleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                app:bl_arrowDirection="left"
                app:bl_arrowHeight="16dp"
                app:bl_arrowPosition="32dp"
                app:bl_arrowWidth="10dp"
                app:bl_cornersRadius="10dp"
                app:bl_strokeWidth="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:text="今日もお疲れ様！"
                    android:textColor="@color/colorAccent"
                    android:textSize="25sp" />

            </com.daasuu.bl.BubbleLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>